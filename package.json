{
  "name": "politico",
  "version": "1.0.0",
  "description": "Politico is an application that enables users(voters) cast their votes for their respective candidate(politicians)",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./server/dist/src/app.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node -- ./server/src/app.js",
    "build": "npm run clean && babel ./server -d ./server/dist",
    "clean": "rm -rf server/dist",
    "lint": "eslint **/*.js --fix",
    "heroku-postbuild": "npm run build",
    "migration": "babel-node server/src/migrations/migrate.js",
    "seed": "babel-node server/src/seed",
    "drop:migration": "babel-node server/src/migrations/dropTable",
    "drop:create": "npm-run-all drop:migration migration",
    "test": "cross-env NODE_ENV=test npm run drop:create && cross-env NODE_ENV=test nyc mocha ./server/test/ --require babel-register --recursive --timeout 50000 --exit",
    "coverage": "cross-env NODE_ENV=test npm run drop:create && cross-env NODE_ENV=test npm run nyc -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "nyc": "nyc --reporter=lcov --reporter=text mocha 'server/test/'  --require babel-core/register --recursive --timeout 50000 --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/despeauxz/Politico.git"
  },
  "author": "Malik Godwin Onimisi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/despeauxz/Politico/issues"
  },
  "homepage": "https://github.com/despeauxz/Politico#readme",
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "braces": "^2.3.2",
    "cloudinary": "^1.14.0",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "make-runnable": "^1.3.6",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "multer-storage-cloudinary": "^2.2.1",
    "nodemailer": "^5.1.1",
    "pg": "^7.8.0",
    "random-string": "^0.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "supertest": "^3.4.2"
  }
}
